{
    // Projeniz için hata ayıklama (debugging) konfigürasyonlarını tanımlar
    "version": "0.2.0",
    "configurations": [
        {
            "name": "c-debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/${fileBasenameNoExtension}.exe",
